<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:elevation="6dp"
        android:padding="4dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvFavBreed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingConstraints"
                tools:text="Naziv rase"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="16dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvFavOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFavBreed"
                tools:text="Poreklo"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/btnFav"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:src="@drawable/baseline_favorite_24"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/tvFavOrigin"/>

            <ImageButton
                android:id="@+id/favShare"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:src="@drawable/baseline_share_24"
                android:background="@color/white"
                app:layout_constraintEnd_toStartOf="@id/tvFavNumberOfVotes"
                tools:ignore="MissingConstraints"
                app:layout_constraintTop_toBottomOf="@id/tvFavOrigin"/>

            <TextView
                android:id="@+id/tvFavNumberOfVotes"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="end"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toStartOf="@id/btnFav"
                app:layout_constraintTop_toBottomOf="@id/tvFavOrigin"
                android:text="100"
                android:textSize="14dp"/>

            <ImageView
                android:id="@+id/ivFavBreedImage"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvFavBreed" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>