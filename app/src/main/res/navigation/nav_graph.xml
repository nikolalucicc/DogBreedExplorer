<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/search_fragment"
        android:name="com.dogbreedexplorer.ui.search.SearchFragment"
        android:label="fragment_search_fragment"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_search_fragment_to_home_fragment"
            app:destination="@id/breeds_fragment" />
    </fragment>
    <fragment
        android:id="@+id/breeds_fragment"
        android:name="com.dogbreedexplorer.ui.breeds.BreedsFragment"
        android:label="fragment_home_fragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_fragment_to_search_fragment"
            app:destination="@id/search_fragment" />
        <action
            android:id="@+id/action_home_fragment_to_liked_fragment"
            app:destination="@id/favorite_fragment" />
        <action
            android:id="@+id/action_breeds_fragment_to_breedDetailsFragment"
            app:destination="@id/breedDetailsFragment" />
        <action
            android:id="@+id/action_breeds_fragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/favorite_fragment"
        android:name="com.dogbreedexplorer.ui.favorite.FavoriteFragment"
        android:label="fragment_liked_fragment"
        tools:layout="@layout/fragment_liked">
        <action
            android:id="@+id/action_liked_fragment_to_home_fragment"
            app:destination="@id/breeds_fragment" />
    </fragment>
    <fragment
        android:id="@+id/breedDetailsFragment"
        android:name="com.dogbreedexplorer.ui.breedDetails.BreedDetailsFragment"
        android:label="fragment_breed_details"
        tools:layout="@layout/fragment_breed_details">
        <action
            android:id="@+id/action_breedDetailsFragment_to_breeds_fragment"
            app:destination="@id/breeds_fragment" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="https://api.thedogapi.com/v1/breeds/{id}" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dogbreedexplorer.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_breeds_fragment"
            app:destination="@id/breeds_fragment" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.dogbreedexplorer.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>